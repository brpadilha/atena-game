{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"plugins": ["prettier"],
	"extends": ["airbnb-base", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"prettier/prettier": ["error"],
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off",
		"camelcase": ["error", { "properties": "never", "ignoreDestructuring": true }],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"]
	}
}
